{
  "name": "nus-tour",
  "version": "0.0.1",
  "description": "NUS Tour",
  "scripts": {
    "install": "npm run install:toolkit && npm run install:backend && npm run install:frontend",
    "install:toolkit": "npm install",
    "install:backend": "cd backend && npm install && cd ..",
    "install:frontend": "cd frontend && npm install && cd ..",
    "check": "npm run lint && npm run test",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "prettier:fix": "npm run prettier:fix:backend && npm run prettier:fix:frontend",
    "prettier:fix:backend": "cd backend && npm run prettier:fix",
    "prettier:fix:frontend": "cd frontend && npm run prettier:fix",
    "prettier:check": "npm run prettier:check:backend && npm run prettier:check:frontend",
    "prettier:check:backend": "cd backend && npm run prettier:check",
    "prettier:check:frontend": "cd frontend && npm run prettier:check",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "start": "concurrently -rk \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "start:dev": "concurrently -rk \"npm run start:dev:backend\" \"npm run start:dev:frontend\"",
    "start:dev:backend": "cd backend && npm run start:dev",
    "start:dev:frontend": "cd frontend && npm run start:dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  }
}
